                              {% else %}
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                              {% endif %}
                            </div>
                            <div class="img-wrap hide-desktop visually-hide" js-size-chart-image data-parameter="cm">
                              {% if size_chart.mobile_cms != blank %}
                                <img src="{{ size_chart.mobile_cms |  image_url: width: '2000x' }}" alt="">
                              {% else %}
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                              {% endif %}
                            </div>
                          </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endif %}
     {% endfor %}
{% endif %}