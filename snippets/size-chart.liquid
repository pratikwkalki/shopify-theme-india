                <div class="size_chart_inner_scroll_new optiscroll_common_new optiscroll">
                  <div class="page-width">
                    <div class="size-chart_wrapper ">
                        <div class="content-top">
                          <h3 class="main-title common-style">size guide</h3>
                          <div class="switch-buttons" js-size-convert-buttons>
                              <div class="inches-button convert-btns active" js-size-convert-btn-inch>Inches</div>
                              <div class="cm-button convert-btns" js-size-convert-btn-cm>cm</div>
                          </div>
                        </div>
                        <div class="size-chart__content">
                          <div class="size-chart__main">
                            <div class="img-wrap hide-mobile" js-size-chart-image data-parameter="in">
                              {% if size_chart.desktop_inches != blank %}
                                <img src="{{ size_chart.desktop_inches |  image_url: width: '2000x' }}" alt="">
                              {% else %}
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
