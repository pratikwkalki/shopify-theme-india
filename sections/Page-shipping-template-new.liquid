{%- if section.blocks.size > 0 -%}
  <div class="Page_shipping_template_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Page_shipping_template_inner_new">
        <div class="Page_shipping_template_breadcrumb_new">
          {% render 'Breadcrumb-navigation-new' %}
        </div>
        {%- if section.blocks.size > 0 -%}
          <div class="Page_shipping_template_mainloop_new">
            <div class="Page_shipping_template_innerloop_new">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'top_heading_text' -%}
                    {%- if block.settings.main_heading_text != blank -%}
                      <div class="Page_top_heading_text_main_new">
                        <div class="Page_top_heading_text_inner_new">
                          <h1>{{ block.settings.main_heading_text }}</h1>
                        </div>
                      </div>
                    {%- endif -%}

                  {%- when 'video_or_image' -%}
                    {%- if block.settings.main_mp4_video != blank or block.settings.main_desktop_image != blank or block.settings.main_mobile_image != blank -%}
                      <div class="Page_video_or_image_main_new">
                        <div class="Page_video_or_image_inner_new">
                          <div class="Page_video_or_image_videoimageboth_new">
                            {%- if block.settings.main_mp4_video != blank -%}
                              <div class="Page_video_or_image_videoimage_new">
                                {{ block.settings.main_mp4_video | video_tag: controls: false, autoplay: true, loop: true }}
                              </div>
                            {% else %}  
                              {%- if block.settings.main_desktop_image != blank and block.settings.main_mobile_image != blank -%}
                                <div class="Page_video_or_image_videoimage_new">
                                  {%- if block.settings.main_desktop_image != blank -%}
                                    {{
                                      block.settings.main_desktop_image | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'desktop_image_new'
                                    }}
                                  {%- endif -%}
                                  {%- if block.settings.main_mobile_image != blank -%}
                                    {{
                                      block.settings.main_mobile_image | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'mobile_image_new'
                                    }}
                                  {%- endif -%}
                                </div>
                              {%- endif -%}
                            {%- endif -%}
                          </div>
                        </div>
                      </div>
                    {%- endif -%}

                  {%- when 'heading_with_lists' -%}
                    {%- if block.settings.inner_list_heading_text != blank and block.settings.inner_list_information_text != blank -%}
                      <div class="Page_heading_with_lists_main_new">
                        <div class="Page_heading_with_lists_inner_new">
                          {%- if block.settings.inner_list_heading_text != blank -%}
                            <div class="Page_heading_with_lists_maintitle_new">
                              <div class="Page_heading_with_lists_innertitle_new">
                                <h2>{{ block.settings.inner_list_heading_text }}</h2>
                              </div>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.inner_list_information_text != blank -%}
                            <div class="Page_heading_with_lists_maininfos_new">
                              <div class="Page_heading_with_lists_innerinfos_new">
                                {{ block.settings.inner_list_information_text }}
                              </div>
                            </div>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}

                  {%- when 'infos_heading_infos' -%}
                    {%- if block.settings.inner_top_information_text != blank or block.settings.inner_middle_heading_text != blank or block.settings.inner_bottom_information_text != blank -%}
                      <div class="Page_infos_heading_infos_main_new">
                        <div class="Page_infos_heading_infos_inner_new">
                          {%- if block.settings.inner_top_information_text != blank -%}
                            <div class="Page_infos_heading_infos_maininfos_new">
                              <div class="Page_infos_heading_infos_innerinfos_new">
                                {{ block.settings.inner_top_information_text }}
                              </div>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.inner_middle_heading_text != blank -%}
                            <div class="Page_infos_heading_infos_maintitle_new">
                              <div class="Page_infos_heading_infos_innertitle_new">
                                <h2>{{ block.settings.inner_middle_heading_text }}</h2>
                              </div>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.inner_bottom_information_text != blank -%}
                            <div class="Page_infos_heading_infos_maininfos_new">
                              <div class="Page_infos_heading_infos_innerinfos_new">
                                {{ block.settings.inner_bottom_information_text }}
                              </div>
                            </div>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}

                  {%- when 'heading_with_logos' -%}
                    {%- if block.settings.inner_heading_text != blank or block.settings.inner_logo_image_1 != blank or block.settings.inner_logo_image_2 != blank or block.settings.inner_logo_image_3 != blank or block.settings.inner_logo_image_4 != blank or block.settings.inner_logo_image_5 != blank or block.settings.inner_information_text != blank -%}
                      <div class="Page_heading_with_logos_main_new">
                        <div class="Page_heading_with_logos_inner_new">
                          {%- if block.settings.inner_heading_text != blank -%}
                            <div class="Page_heading_with_logos_maintitle_new">
                              <div class="Page_infos_heading_infos_innertitle_new">
                                <h2>{{ block.settings.inner_heading_text }}</h2>
                              </div>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.inner_logo_image_1 != blank or block.settings.inner_logo_image_2 != blank or block.settings.inner_logo_image_3 != blank or block.settings.inner_logo_image_4 != blank or block.settings.inner_logo_image_5 != blank -%}
                            <div class="Page_heading_with_logos_mainlogos_new">
                              <div class="Page_heading_with_logos_innerlogos_new">
                                {%- if block.settings.inner_logo_image_1 != blank -%}
                                  <div class="Page_heading_with_logos_innerlogos_image_new">
                                    {{
                                      block.settings.inner_logo_image_1 | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'Logo_image_new'
                                    }}
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.inner_logo_image_2 != blank -%}
                                  <div class="Page_heading_with_logos_innerlogos_image_new">
                                    {{
                                      block.settings.inner_logo_image_2 | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'Logo_image_new'
                                    }}
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.inner_logo_image_3 != blank -%}
                                  <div class="Page_heading_with_logos_innerlogos_image_new">
                                    {{
                                      block.settings.inner_logo_image_3 | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'Logo_image_new'
                                    }}
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.inner_logo_image_4 != blank -%}
                                  <div class="Page_heading_with_logos_innerlogos_image_new">
                                    {{
                                      block.settings.inner_logo_image_4 | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'Logo_image_new'
                                    }}
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.inner_logo_image_5 != blank -%}
                                  <div class="Page_heading_with_logos_innerlogos_image_new">
                                    {{
                                      block.settings.inner_logo_image_5 | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'Logo_image_new'
                                    }}
                                  </div>
                                {%- endif -%}
                              </div>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.inner_information_text != blank -%}
                            <div class="Page_infos_heading_infos_maininfos_new">
                              <div class="Page_infos_heading_infos_innerinfos_new">
                                {{ block.settings.inner_information_text }}
                              </div>
                            </div>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}

                {%- endcase -%}  
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%} 

{% schema %}
  {
    "name": "Page Shipping Template",
    "class": "Page_shipping_template_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      }
    ],
    "blocks": [
      {
        "type": "top_heading_text",
        "name": "Top Heading Text",
        "settings": [
          {
            "type": "textarea",
            "id": "main_heading_text",
            "label": "Add Main Heading Text",
            "default": "We Offer express worldwide shipping<br/> across <span>200 countries</span>"
          }
        ]
      },
      {
        "type": "video_or_image",
        "name": "Video OR Image",
        "settings": [
          {
            "type": "video",
            "id": "main_mp4_video",
            "label": "Add Main MP4 Video"
          },
          {
            "type": "image_picker",
            "id": "main_desktop_image",
            "label": "Add Main Desktop Image"
          },
          {
            "type": "image_picker",
            "id": "main_mobile_image",
            "label": "Add Main Mobile Image"
          }
        ]
      },
      {
        "type": "heading_with_lists",
        "name": "Heading With Lists",
        "settings": [
          {
            "type": "textarea",
            "id": "inner_list_heading_text",
            "label": "Add Inner List Heading Text",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
          },
          {
            "type": "textarea",
            "id": "inner_list_information_text",
            "label": "Add Inner List Information Text",
            "default": "<ol><li>Lorem Ipsum</li><li>Lorem Ipsum</li><li>Lorem Ipsum</li><li>Lorem Ipsum</li></ol>"
          }
        ]
      },
      {
        "type": "infos_heading_infos",
        "name": "Infos Heading Infos",
        "settings": [
          {
            "type": "richtext",
            "id": "inner_top_information_text",
            "label": "Add Inner Top Information Text",
            "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>"
          },
          {
            "type": "textarea",
            "id": "inner_middle_heading_text",
            "label": "Add Inner Middle Heading Text",
            "default": "Lorem ipsum dolor sit amet."
          },
          {
            "type": "richtext",
            "id": "inner_bottom_information_text",
            "label": "Add Inner Bottom Information Text",
            "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>"
          }
        ]
      },
      {
        "type": "heading_with_logos",
        "name": "Heading With Logos",
        "settings": [
          {
            "type": "textarea",
            "id": "inner_heading_text",
            "label": "Add Inner Heading Text",
            "default": "Lorem ipsum dolor sit amet."
          },
          {
            "type": "image_picker",
            "id": "inner_logo_image_1",
            "label": "Add Main Inner Logo Image-1"
          },
          {
            "type": "image_picker",
            "id": "inner_logo_image_2",
            "label": "Add Main Inner Logo Image-2"
          },
          {
            "type": "image_picker",
            "id": "inner_logo_image_3",
            "label": "Add Main Inner Logo Image-3"
          },
          {
            "type": "image_picker",
            "id": "inner_logo_image_4",
            "label": "Add Main Inner Logo Image-4"
          },
          {
            "type": "image_picker",
            "id": "inner_logo_image_5",
            "label": "Add Main Inner Logo Image-5"
          },
          {
            "type": "richtext",
            "id": "inner_information_text",
            "label": "Add Inner Information Text",
            "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Page Shipping Template",
        "blocks": [
          {
            "type": "top_heading_text"
          },
          {
            "type": "video_or_image"
          },
          {
            "type": "heading_with_lists"
          },
          {
            "type": "infos_heading_infos"
          },
          {
            "type": "heading_with_logos"
          }
        ]
      }
    ]
  }
{% endschema %}