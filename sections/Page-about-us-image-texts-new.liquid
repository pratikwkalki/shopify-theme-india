{%- if section.blocks.size > 0 or section.settings.main_top_heading_text != blank -%}
  <div class="Page_about_us_image_texts_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Page_about_us_image_texts_inner_new">
        {%- if section.settings.main_top_heading_text != blank -%}
          <div class="Common_title_new Page_about_us_image_texts_title_new">
            <h2>{{ section.settings.main_top_heading_text }}</h2>
          </div>
        {%- endif -%}
        {%- if section.blocks.size > 0 -%}
          <div class="Page_about_us_image_texts_mainloop_new">
            <div class="Page_about_us_image_texts_innerloop_new">
              {%- for block in section.blocks -%}
                {%- if block.settings.main_mp4_video != blank or block.settings.main_desktop_image != blank or block.settings.main_mobile_image != blank or block.settings.title != blank or block.settings.main_designation_text != blank or block.settings.main_information_text != blank -%}
                  <div class="Page_about_us_image_texts_innerloop_mainboxs_new{% if block.settings.video_or_image_on_right %} Page_about_us_image_texts_video_or_image_on_right_new{% endif %}">
                    {%- if block.settings.main_mobile_heading_text != blank -%}
                      <div class="Common_title_new Page_about_us_image_texts_innerloop_mobiletitle_new">
                        <h2>{{ block.settings.main_mobile_heading_text }}</h2>
                      </div>
                    {%- endif -%}
                    <div class="Page_about_us_image_texts_innerloop_innerboxs_new">
                      {%- if block.settings.main_mp4_video != blank or block.settings.main_desktop_image != blank or block.settings.main_mobile_image != blank -%}
                        <div class="Page_about_us_image_texts_innerloop_innerboxs_1_new">
                          <div class="Page_about_us_image_texts_innerloop_innerboxs_1_videoimageboth_new">
                            {%- if block.settings.main_mp4_video != blank -%}
                              <div class="Page_about_us_image_texts_innerloop_innerboxs_1_videoimage_new">
                                {{ block.settings.main_mp4_video | video_tag: controls: false, autoplay: true, loop: true }}
                              </div>
                            {% else %}  
                              {%- if block.settings.main_desktop_image != blank and block.settings.main_mobile_image != blank -%}
                                <div class="Page_about_us_image_texts_innerloop_innerboxs_1_videoimage_new">
                                  {%- if block.settings.main_desktop_image != blank -%}
                                    {{
                                      block.settings.main_desktop_image | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'desktop_image_new'
                                    }}
                                  {%- endif -%}
                                  {%- if block.settings.main_mobile_image != blank -%}
                                    {{
                                      block.settings.main_mobile_image | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'mobile_image_new'
                                    }}
                                  {%- endif -%}
                                </div>
                              {%- endif -%}
                            {%- endif -%}
                          </div>
                        </div>
                      {%- endif -%}
                      {%- if block.settings.title != blank or block.settings.main_designation_text != blank or block.settings.main_information_text != blank -%}
                        <div class="Page_about_us_image_texts_innerloop_innerboxs_2_new">
                          <div class="Page_about_us_image_texts_innerloop_innerboxs_2_titleinfosboth_new">
                            {%- if block.settings.title != blank -%}
                              <div class="Page_about_us_image_texts_innerloop_innerboxs_2_authornames_new">
                                {{ block.settings.title }}
                              </div>  
                            {%- endif -%}
                            {%- if block.settings.main_designation_text != blank -%}
                              <div class="Page_about_us_image_texts_innerloop_innerboxs_2_designation_new">
                                {{ block.settings.main_designation_text }}
                              </div>  
                            {%- endif -%}
                            {%- if block.settings.main_information_text != blank -%}
                              <div class="Page_about_us_image_texts_innerloop_innerboxs_2_authorinfos_new">
                                {{ block.settings.main_information_text }}
                              </div>  
                            {%- endif -%}
                          </div>
                        </div>  
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%} 

{% schema %}
  {
    "name": "Page About Us Image Texts",
    "class": "Page_about_us_image_texts_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "main_top_heading_text",
        "label": "Add Main Top Heading Text",
        "default": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "information",
        "name": "Information",
        "settings": [
          {
            "type": "checkbox",
            "id": "video_or_image_on_right",
            "label": "Video OR Image On Right",
            "default": false
          },
          {
            "type": "text",
            "id": "main_mobile_heading_text",
            "label": "Add Main Mobile Heading Text"
          },
          {
            "type": "video",
            "id": "main_mp4_video",
            "label": "Add Main MP4 Video"
          },
          {
            "type": "image_picker",
            "id": "main_desktop_image",
            "label": "Add Main Desktop Image"
          },
          {
            "type": "image_picker",
            "id": "main_mobile_image",
            "label": "Add Main Mobile Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Add Main Author Name Text",
            "default": "Lorem Ipsum is simply dummy."
          },
          {
            "type": "text",
            "id": "main_designation_text",
            "label": "Add Main Author designation Text",
            "default": "Lorem Ipsum is simply dummy."
          },
          {
            "type": "richtext",
            "id": "main_information_text",
            "label": "Add Main Information Text",
            "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Page About Us Image Texts",
        "blocks": [
          {
            "type": "information"
          },
          {
            "type": "information"
          }
        ]
      }
    ]
  }
{% endschema %}