{%- if section.blocks.size > 0 or section.settings.main_heading_text != blank -%}
  <div class="Index_collection_lists_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Index_collection_lists_inner_new">
        {%- if section.settings.main_heading_text != blank -%}
          <div class="Common_title_new Index_collection_lists_title_new">
            <h2>{{ section.settings.main_heading_text }}</h2>
          </div>
        {%- endif -%}
        {%- if section.blocks.size > 0 -%}
          <div class="Index_collection_lists_mainloop_new">
            <div class="Index_collection_lists_innerloop_new">
              <div class="swiper-container Index_collection_list_slider">
                <div class="swiper-wrapper">
                  {%- for block in section.blocks -%}
                    {%- if block.settings.main_mp4_video != blank or block.settings.main_desktop_image != blank or block.settings.main_mobile_image != blank or block.settings.title != blank or block.settings.main_button_link != blank -%}
                      <div class="swiper-slide Index_custom_collections_allloop_mainboxs_new">
                        {%- if block.settings.main_button_link != blank -%}
                          <a href="{{ block.settings.main_button_link }}" aria-label="Shop Now {{ block.settings.title }}" title="{{ block.settings.title }}"></a>
                        {%- endif -%}  
                        <div class="Index_custom_collections_allloop_innerboxs_new">
                          {%- if block.settings.main_mp4_video != blank or block.settings.main_desktop_image != blank or block.settings.main_mobile_image != blank -%}
                            <div class="Index_custom_collections_allloop_innerboxs_1_new">
                              <div class="Index_custom_collections_allloop_innerboxs_1_videoimageboth_new">
                                {%- if block.settings.main_mp4_video != blank -%}
                                  <div class="Index_custom_collections_allloop_innerboxs_1_videoimage_new">
                                    {{ block.settings.main_mp4_video | video_tag: controls: false, autoplay: true, loop: true }}
                                  </div>
                                {% else %}  
                                  {%- if block.settings.main_desktop_image != blank and block.settings.main_mobile_image != blank -%}
                                    <div class="Index_custom_collections_allloop_innerboxs_1_videoimage_new">
                                      {%- if block.settings.main_desktop_image != blank -%}
                                        {{
                                          block.settings.main_desktop_image | 
                                          image_url: width: img.width | 
                                          image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                          fetchpriority: 'auto', 
                                          class:'desktop_image_new',
                                          alt: block.settings.title,
                                          title: block.settings.title
                                        }}
                                      {%- endif -%}
                                      {%- if block.settings.main_mobile_image != blank -%}
                                        {{
                                          block.settings.main_mobile_image | 
                                          image_url: width: img.width | 
                                          image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                          fetchpriority: 'auto', 
                                          class:'mobile_image_new',
                                          alt: block.settings.title,
                                          title: block.settings.title
                                        }}
                                      {%- endif -%}
                                    </div>
                                  {%- endif -%}
                                {%- endif -%}
                              </div>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.title != blank or block.settings.sub_head_text != blank or block.settings.main_button_link != blank -%}
                            <div class="Index_custom_collections_allloop_innerboxs_3_new">
                              <div class="Index_custom_collections_allloop_innerboxs_3_titlebuttonboth_new">
                                {%- if block.settings.title != blank -%}
                                  <div class="Index_custom_collections_allloop_innerboxs_3_title_new">
                                    <h2>{{ block.settings.title }}</h2>
                                  </div>  
                                {%- endif -%}
                                {%- if block.settings.sub_head_text != blank -%}
                                   <div class="Index_custom_collections_allloop_innerboxs_3_subtitle_new">
                                      <p>{{ block.settings.sub_head_text }}</p>
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.main_button_text != blank and block.settings.main_button_link != blank -%}
                                  <div class="Index_custom_collections_allloop_innerboxs_3_button_new">
                                    <a href="{{ block.settings.main_button_link }}" class="button button_white">
                                      {{ block.settings.main_button_text }}
                                    </a>
                                  </div>  
                                {%- endif -%}
                              </div>
                            </div>  
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}
                  {%- endfor -%}
                </div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
              </div>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%} 

{% schema %}
  {
    "name": "Index Collection Lists",
    "class": "Index_collection_lists_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "main_heading_text",
        "label": "Add Main Heading Text",
        "default": "Shop by Collection"
      }
    ],
    "blocks": [
      {
        "type": "information",
        "name": "Information",
        "settings": [
          {
            "type": "video",
            "id": "main_mp4_video",
            "label": "Add Main MP4 Video"
          },
          {
            "type": "image_picker",
            "id": "main_desktop_image",
            "label": "Add Main Desktop Image"
          },
          {
            "type": "image_picker",
            "id": "main_mobile_image",
            "label": "Add Main Mobile Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Add Main Heading Text"
          },
          {
            "type": "text",
            "id": "sub_head_text",
            "label": "Add Sub Heading Text"           
          },
          {
            "type": "text",
            "id": "main_button_text",
            "label": "Add Main Button Text",
            "default": "Shop Now"
          },
          {
            "type": "url",
            "id": "main_button_link",
            "label": "Add Main Button Link",
            "default": "/"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Index Collection Lists",
        "blocks": [
          {
            "type": "information"
          },
          {
            "type": "information"
          },
          {
            "type": "information"
          },
          {
            "type": "information"
          }
        ]
      }
    ]
  }
{% endschema %}