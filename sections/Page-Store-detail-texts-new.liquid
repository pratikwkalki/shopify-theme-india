{%- if metaobject.description_information_text.value != blank -%}
  <div class="Page_store_detail_texts_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Page_store_detail_texts_inner_new">
        <div class="Page_store_detail_texts_object_new">
          {%- if metaobject.description_heading_text.value != blank -%}
            <div class="Common_title_new Page_store_detail_texts_object_title_new">
              <h2>{{ metaobject.description_heading_text.value }}</h2>
            </div>
          {%- endif -%}
          {%- if metaobject.description_information_text.value != blank -%}
            <div class="Collection_descriptions_infos_new Page_store_detail_texts_object_infos_new">
              {{ metaobject.description_information_text | metafield_tag }}
            </div>
            <div class="read_more_new">Read More</div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%} 

{% schema %}
  {
    "name": "Page Store Detail Texts",
    "class": "Page_store_detail_texts_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      }
    ],
    "presets": [
      {
        "name": "Page Store Detail Texts"
      }
    ]
  }
{% endschema %}