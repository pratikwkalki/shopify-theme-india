{%- if section.blocks.size > 0 or section.settings.show_copyright_text -%}
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_whatsapp_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
      assign has_social_icons = false
    endif
  -%}
  <div class="Footer_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Footer_inner_new">
        {%- if section.blocks.size > 0 -%}
          <div class="Footer_1_new">
            <div class="Footer_1_detail_new">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'menus-columns-lists' -%}
                    {%- if block.settings.main_heading_text != blank and block.settings.main_menu_select != blank -%}
                      <div class="Footer_menus_columns_lists_main_new">
                        <div class="Footer_menus_columns_lists_inner_new">
                          {%- if block.settings.main_heading_text != blank -%}
                            <div class="Footer_menus_columns_lists_title_new Footer_common_title_new">
                              <strong>{{ block.settings.main_heading_text }}<span><svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M1 0.999999L7 7L13 1" stroke="#747380" stroke-width="1.3" stroke-linecap="round"></path> </svg> </span></strong>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.main_menu_select != blank -%}
                            <div class="Footer_menus_columns_lists_menus_new Footer_common_infos_new">
                              <ul class="menu">
                                {%- for link in block.settings.main_menu_select.links -%}
                                  <li class="menu-link" {% if link.title == 'Cart' or link.title == 'Shopping Bag' %} js-footer-cart-drawer-btn {% endif %}>
                                    <a href="{{ link.url }}">{{ link.title }}</a>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            </div>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}  

                  {%- when 'details-columns-lists' -%}
                    {%- if block.settings.main_payment_icon_image_1 != blank or block.settings.main_app_icon_image_1 != blank or block.settings.main_app_icon_image_2 != blank or has_social_icons or block.settings.main_information_text_4 != blank or block.settings.main_information_text_5 != blank -%}
                      <div class="Footer_details_columns_lists_main_new">
                        <div class="Footer_details_columns_lists_inner_new">
                          {%- if block.settings.main_heading_text_1 != blank and block.settings.main_payment_icon_image_1 != blank -%}
                            <div class="Footer_details_columns_lists_1_new">
                              <div class="Footer_details_columns_lists_1_detail_new">
                                {%- if block.settings.main_heading_text_1 != blank -%}
                                  <div class="Footer_details_columns_lists_1_detail_title_new Footer_common_title_new">
                                    <strong>{{ block.settings.main_heading_text_1 }}<span><svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M1 0.999999L7 7L13 1" stroke="#747380" stroke-width="1.3" stroke-linecap="round"></path> </svg> </span></strong>
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.main_payment_icon_image_1 != blank -%}
                                  <div class="Footer_details_columns_lists_1_detail_infos_new Footer_common_infos_new">
                                    {{
                                      block.settings.main_payment_icon_image_1 | 
                                      image_url: width: img.width | 
                                      image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                      fetchpriority: 'auto', 
                                      class:'Payment_icon_image_new',
                                      loading: 'lazy'
                                    }}
                                  </div>
                                {%- endif -%}
                              </div>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.main_app_icon_image_1 != blank or block.settings.main_app_icon_image_2 != blank -%}
                            <div class="Footer_details_columns_lists_2_new">
                              <div class="Footer_details_columns_lists_2_detail_new">
                                {%- if block.settings.main_heading_text_2 != blank -%}
                                  <div class="Footer_details_columns_lists_2_detail_title_new Footer_common_title_new">
                                    <strong>{{ block.settings.main_heading_text_2 }}<span><svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M1 0.999999L7 7L13 1" stroke="#747380" stroke-width="1.3" stroke-linecap="round"></path> </svg> </span></strong>
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.main_app_icon_image_1 != blank or block.settings.main_app_icon_image_2 != blank -%}
                                  <div class="Footer_common_infos_new">
                                    <div class="Footer_details_columns_lists_2_detail_infos_new">
                                      {%- if block.settings.main_app_icon_image_1 != blank -%}
                                        <div class="Footer_details_columns_lists_2_detail_infos_image_new">
                                          {%- if block.settings.main_app_icon_url_1 != blank -%}
                                            <a href="{{ block.settings.main_app_icon_url_1 }}" target="_blank">
                                          {%- endif -%}
                                              {{
                                                block.settings.main_app_icon_image_1 | 
                                                image_url: width: img.width | 
                                                image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                                fetchpriority: 'auto', 
                                                class:'Icon_app_image_new',
                                                alt: 'Google Play',
                                                loading: 'lazy'
                                              }}
                                          {%- if block.settings.main_app_icon_url_1 != blank -%}
                                            </a>
                                          {%- endif -%}
                                        </div>
                                      {%- endif -%}
                                      {%- if block.settings.main_app_icon_image_2 != blank -%}
                                        <div class="Footer_details_columns_lists_2_detail_infos_image_new">
                                          {%- if block.settings.main_app_icon_url_2 != blank -%}
                                            <a href="{{ block.settings.main_app_icon_url_2 }}" target="_blank">
                                          {%- endif -%}
                                              {{
                                                block.settings.main_app_icon_image_2 | 
                                                image_url: width: img.width | 
                                                image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                                fetchpriority: 'auto', 
                                                class:'Icon_app_image_new',
                                                alt: 'App Store',
                                                loading: 'lazy'
                                              }}
                                          {%- if block.settings.main_app_icon_url_2 != blank -%}
                                            </a>
                                          {%- endif -%}
                                        </div>
                                      {%- endif -%}
                                    </div>
                                  </div>
                                {%- endif -%}
                              </div>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.main_heading_text_3 != blank and block.settings.show_social_icons_3 and has_social_icons -%}
                            <div class="Footer_details_columns_lists_3_new">
                              <div class="Footer_details_columns_lists_3_detail_new">
                                {%- if block.settings.main_heading_text_3 != blank -%}
                                  <div class="Footer_details_columns_lists_3_detail_title_new Footer_common_title_new">
                                    <strong>{{ block.settings.main_heading_text_3 }}<span><svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M1 0.999999L7 7L13 1" stroke="#747380" stroke-width="1.3" stroke-linecap="round"></path> </svg> </span></strong>
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.show_social_icons_3 and has_social_icons -%}
                                  <div class="Footer_details_columns_lists_3_detail_infos_new Footer_common_infos_new">
                                    {%- render 'social-icons', class: 'footer__list-social' -%}
                                  </div>
                                {%- endif -%}
                              </div>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.main_information_text_4 != blank or block.settings.main_information_text_5 != blank -%}
                            <div class="Footer_details_columns_lists_4_new">
                              <div class="Footer_details_columns_lists_4_detail_new">
                                {%- if block.settings.main_heading_text_4 != blank and block.settings.main_information_text_4 != blank -%}
                                  <div class="Footer_details_columns_lists_4_detail_1_new">
                                    <div class="Footer_details_columns_lists_4_detail_1_boxs_new">
                                      {%- if block.settings.main_heading_text_4 != blank -%}
                                        <div class="Footer_details_columns_lists_4_detail_1_boxs_title_new Footer_common_title_new">
                                          <strong>{{ block.settings.main_heading_text_4 }}<span><svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M1 0.999999L7 7L13 1" stroke="#747380" stroke-width="1.3" stroke-linecap="round"></path> </svg> </span></strong>
                                        </div>
                                      {%- endif -%}
                                      {%- if block.settings.main_information_text_4 != blank -%}
                                        <div class="Footer_details_columns_lists_4_detail_1_boxs_infos_new Footer_common_infos_new">
                                          {{ block.settings.main_information_text_4 }}
                                        </div>
                                      {%- endif -%}
                                    </div>
                                  </div>
                                {%- endif -%}
                                {%- if block.settings.main_heading_text_5 != blank and block.settings.main_information_text_5 != blank -%}
                                  <div class="Footer_details_columns_lists_4_detail_1_new">
                                    <div class="Footer_details_columns_lists_4_detail_1_boxs_new">
                                      {%- if block.settings.main_heading_text_5 != blank -%}
                                        <div class="Footer_details_columns_lists_4_detail_1_boxs_title_new Footer_common_title_new">
                                          <strong>{{ block.settings.main_heading_text_5 }}<span><svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M1 0.999999L7 7L13 1" stroke="#747380" stroke-width="1.3" stroke-linecap="round"></path> </svg> </span></strong>
                                        </div>
                                      {%- endif -%}
                                      {%- if block.settings.main_information_text_5 != blank -%}
                                        <div class="Footer_details_columns_lists_4_detail_1_boxs_infos_new Footer_common_infos_new">
                                          {{ block.settings.main_information_text_5 }}
                                        </div>
                                      {%- endif -%}
                                    </div>
                                  </div>
                                {%- endif -%}
                              </div>
                            </div>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}
                  
                {%- endcase -%}  
              {%- endfor -%}  
            </div>  
          </div>
        {%- endif -%}
        {%- if section.blocks.size > 0 -%}
          <div class="Footer_2_new">
            <div class="Footer_2_detail_new">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'details-rows-texts' -%}
                    {%- if block.settings.main_heading_text != blank and block.settings.main_menu_select_list != blank -%}
                      <div class="Footer_details_rows_texts_main_new">
                        <div class="Footer_details_rows_texts_inner_new">
                          {%- if block.settings.main_heading_text != blank -%}
                            <div class="Footer_details_rows_texts_title_new Footer_common_title_new">
                              <strong>{{ block.settings.main_heading_text }}<span><svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M1 0.999999L7 7L13 1" stroke="#747380" stroke-width="1.3" stroke-linecap="round"></path> </svg> </span></strong>
                            </div>
                          {%- endif -%}
                          {%- if block.settings.main_menu_select_list != blank -%}
                            <div class="Footer_details_rows_texts_infos_new Footer_common_infos_new">
                              <ul class="menu">
                                {%- for link in block.settings.main_menu_select_list.links -%}
                                  <li class="menu-link">                                    
                                    <a href="{{ link.url }}" target="_blank" class="desktop_image_new">{{ link.title }}</a>
                                    <a href="{{ link.url }}" target="_self" class="mobile_image_new">{{ link.title }}</a>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            </div>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}

                  {%- when 'icons-with-texts' -%}
                    {%- if block.settings.main_information_text_1 != blank or block.settings.main_information_text_2 != blank or block.settings.main_information_text_3 != blank or block.settings.main_information_text_4 != blank or block.settings.main_information_text_5 != blank -%}
                      <div class="Footer_icons_with_texts_main_new">
                        <div class="Footer_icons_with_texts_inner_new">
                          {%- for i in (1..5) -%}
                            {%- capture main_icon_image %}main_icon_image_{{i}}{% endcapture -%}
                            {%- capture main_information_text %}main_information_text_{{i}}{% endcapture -%}
                            {%- assign main_icon_image = block.settings[main_icon_image] -%}
                            {%- assign main_information_text = block.settings[main_information_text] -%}
                            {%- if main_icon_image != blank and main_information_text != blank -%}
                              <div class="Footer_icons_with_texts_maindetail_new">
                                <div class="Footer_icons_with_texts_innerdetail_new">
                                  {%- if main_icon_image != blank -%}
                                    <div class="Footer_icons_with_texts_innerdetail_icons_new">
                                      {{
                                        main_icon_image | 
                                        image_url: width: img.width | 
                                        image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                        fetchpriority: 'auto', 
                                        class:'Icon_image_new',
                                        loading: 'lazy'
                                      }}
                                    </div>
                                  {%- endif -%}
                                  {%- if main_information_text != blank -%}
                                    <div class="Footer_icons_with_texts_innerdetail_infos_new">
                                      {{ main_information_text }}
                                    </div>
                                  {%- endif -%}
                                </div>
                              </div>
                            {%- endif -%}
                          {%- endfor -%}
                        </div>
                      </div>
                    {%- endif -%}

                  {%- when 'informations-texts' -%}
                    {%- if block.settings.main_information_text != blank -%}
                      <div class="Footer_informations_texts_main_new">
                        <div class="Footer_informations_texts_inner_new">
                          {{ block.settings.main_information_text }}
                        </div>
                      </div>
                    {%- endif -%}
            
                {%- endcase -%}
              {%- endfor -%}  
            </div>  
          </div>
        {%- endif -%}
        {%- if section.settings.show_copyright_text -%}
          <div class="Footer_3_new">
            <div class="Footer_3_detail_new">
              <p>&copy; 2007 - {{ 'now' | date: '%Y' }} Kalkifashion All Rights Reserved.</p>
            </div>  
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}

