{%- if section.settings.main_heading_text != blank or section.settings.main_desktop_mp4_video != blank or section.settings.main_mobile_mp4_video != blank or section.settings.main_desktop_full_image != blank or section.settings.main_mobile_full_image != blank -%}
  <div class="Index_middle_banner_infos_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Index_middle_banner_infos_inner_new">
        {%- if section.settings.main_heading_text != blank -%}
          <div class="Common_title_new Index_middle_banner_infos_title_new">
            <h2>{{ section.settings.main_heading_text }}</h2>
          </div>
        {%- endif -%}
        {%- if section.settings.main_desktop_mp4_video != blank or section.settings.main_mobile_mp4_video != blank or section.settings.main_desktop_full_image != blank or section.settings.main_mobile_full_image != blank -%}
          <div class="Index_middle_banner_infos_mainboxs_new">
            <div class="Index_middle_banner_infos_innerboxs_new">
              {%- if section.settings.main_banner_redirect_link != blank -%}
                <a href="{{ section.settings.main_banner_redirect_link }}">
              {%- endif -%}
                  <div class="Index_middle_banner_infos_innerboxs_videoimageboth_new">
                    {%- if section.settings.main_desktop_mp4_video != blank and section.settings.main_mobile_mp4_video != blank -%}
                      <div class="Index_middle_banner_infos_innerboxs_videoimage_new">
                        {%- if section.settings.main_desktop_mp4_video != blank -%}
                          {{ section.settings.main_desktop_mp4_video | video_tag: controls: false, autoplay: true, loop: true, class: 'desktop_image_new' }}
                        {%- endif -%}
                        {%- if section.settings.main_mobile_mp4_video != blank -%}
                          {{ section.settings.main_mobile_mp4_video | video_tag: controls: false, autoplay: true, loop: true, class: 'mobile_image_new' }}
                        {%- endif -%}
                      </div>
                    {% else %}  
                      {%- if section.settings.main_desktop_full_image != blank and section.settings.main_mobile_full_image != blank -%}
                        <div class="Index_middle_banner_infos_innerboxs_videoimage_new">
                          {% assign main_desktop_image = section.settings.main_desktop_full_image  | image_url %}
                          {% assign main_mobile_image = section.settings.main_mobile_full_image  | image_url %}
                          <picture>
                            <source srcset="{%- render 'gumlet', src: main_mobile_image w: 380 %}" media="(max-width: 380px)" />
                            <source srcset="{%- render 'gumlet', src: main_mobile_image w: 500 %}" media="(max-width: 500px)" />
                            <source srcset="{%- render 'gumlet', src: main_mobile_image w: 749 %}" media="(max-width: 749px)" />
                            <img src="{%- render 'gumlet', src: main_desktop_image w: 350 %}" alt="{{ section.settings.alt_tag_text }}" loading="lazy" width="346" height="461" />
                          </picture>
                        </div>
                      {%- endif -%}
                    {%- endif -%}
                  </div>
              {%- if section.settings.main_banner_redirect_link != blank -%}
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}  

{% schema %}
  {
    "name": "Index Middle Banner Infos",
    "class": "Index_middle_banner_infos_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "main_heading_text",
        "label": "Add Main Heading Text",
        "default": "Wedding Collection"
      },
      {
        "type": "video",
        "id": "main_desktop_mp4_video",
        "label": "Add Main Desktop MP4 Video"
      },
      {
        "type": "video",
        "id": "main_mobile_mp4_video",
        "label": "Add Main Mobile MP4 Video"
      },
      {
        "type": "image_picker",
        "id": "main_desktop_full_image",
        "label": "Add Main Desktop Full Image"
      },
      {
        "type": "image_picker",
        "id": "main_mobile_full_image",
        "label": "Add Main Mobile Full Image"
      },
      {
        "type": "text",
        "id": "alt_tag_text",
        "label": "Add alt tag text"
      },
      {
        "type": "url",
        "id": "main_banner_redirect_link",
        "label": "Add Main Banner Redirect Link"
      }
    ],
    "presets": [
      {
        "name": "Index Middle Banner Infos"
      }
    ]
  }
{% endschema %}