{%- if collection.description != blank -%}
  {{ 'home-page-footer-details.css' | asset_url | stylesheet_tag }}
  <div class="Collection_descriptions_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      {% if template.suffix == 'mens-detail-new' %}
        <h1 class="hide">{{ collection.title }}</h1>
      {% endif %}
      <div class="Collection_descriptions_inner_new">
        <div class="Collection_descriptions_infos_new rte">
          {{ collection.description }}
        </div>
        <div class="read_more_new">Read More</div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      $(".read_more_new").click(function(){if($(this).hasClass("open")==!1){$(this).addClass("open");$(this).html("Read Less");$(".Collection_descriptions_infos_new").addClass("active")}else{$(this).removeClass("open");$(this).html("Read More");$(".Collection_descriptions_infos_new").removeClass("active")}})
    });
  </script>
{%- endif -%}

{% schema %}
  {
    "name": "Collection Descriptions",
    "class": "Collection_descriptions_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      }
    ],
    "presets": [
      {
        "name": "Collection Descriptions"
      }
    ]
  }
{% endschema %}