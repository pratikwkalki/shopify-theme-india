{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- if section.settings.enable_quick_add -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
<script src="{{ 'ajax-pagination.js' | asset_url }}" defer></script>
<script src="{{ 'collection-pagination.js' | asset_url }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- if canonical_url contains "limit" -%}
  {%- assign productsLimit = canonical_url | split: 'limit=' | last -%}
  {%- assign products_per_page = productsLimit -%}
{%- else -%}
  {%- assign productsLimit = section.settings.products_per_page -%}
  {%- assign products_per_page = section.settings.products_per_page -%}
{%- endif %}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }} Collection_product_grid_main_new Collection_luxe_product_main_new" js-main-collection data-section-id="{{ section.id }}">
  {%- paginate collection.products by products_per_page -%}
    
    <div class="{% if section.settings.filter_type == 'vertical' %} facets-vertical page-width{% endif %} Collection_product_grid_inner_new">
      {{ 'component-facets.css' | asset_url | stylesheet_tag }}
      <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
      {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
        <div class="page-width">
          <div class="Collection_luxe_product_toppart_new">
            <aside
              aria-labelledby="verticalTitle"
              class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %} Collection_product_grid_leftside_new Collection_luxe_product_toppart_1_new"
              id="main-collection-filters"
              data-id="{{ section.id }}"
            >
              
              {% render 'facets',
                results: collection,
                enable_filtering: section.settings.enable_filtering,
                enable_sorting: section.settings.enable_sorting,
                filter_type: section.settings.filter_type,
                paginate: paginate
              %}
            </aside>

            <!-- added -->
            {% comment %}
            <div class="active-facets active-facets-mobile active-facets-mobile_new medium-hide large-up-hide">
              <div class="facet-items_wrap">
                {%- for filter in results.filters -%}
                  {%- for value in filter.active_values -%}
                    
                    {% if filter.label == 'Color' %}
                      <div class="faced_item active__filter-value">
                        <facet-remove>
                          <a href="{{ value.url_to_remove }}" class="active-facets__button active-facets__button--light">
                            <span class="active-facets__button-inner button button--tertiary">
                              <div class="facets_item-wrap">

                                <div class="facet_item-header">
                                  <div class="category-name">
                                    {{ filter.label }}
                                  </div>
                                  {% render 'icon-close-small' %}
                                </div>
                                <div class="active-color-swatch-item {{ value.label | handleize }}">
                                </div>
                              </div>
                            </span>
                          </a>
                        </facet-remove>
                      </div> 
                    {% else %}
                      <div class="faced_item active__filter-value">
                        <facet-remove class="facet-remove">
                          <a href="{{ value.url_to_remove }}" class="active-facets__button active-facets__button--light">
                            <span class="active-facets__button-inner button button--tertiary">
                              <div class="facet_item-header">
                                <div class="category-name">
                                  {{ filter.label }}
                                </div>
                                {% render 'icon-close-small' %}
                              </div>
                              <div class="facet_item-name">
                                {{ value.label | escape }}
                                <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                              </div>
                            </span>
                          </a>
                        </facet-remove>
                      </div>
                    {% endif %}
                    
                  {%- endfor -%}
            
                  {%- if filter.type == 'price_range' -%}
                    {%- if filter.min_value.value != null or filter.max_value.value != null -%}
                      
                        <div class="faced_item active__filter-value">
                          <facet-remove class="facet-remove">
                            <a href="{{ filter.url_to_remove }}" class="active-facets__button active-facets__button--light">
                              <span class="active-facets__button-inner button button--tertiary">
                                <div class="facet_item-header">
                                  <div class="category-name">
                                    {{ filter.label }}
                                  </div>
                                  {% render 'icon-close-small' %}
                                </div>
                                <div class="facet_item-name">
                                  {%- if filter.min_value.value -%}
                                    {{ filter.min_value.value | money }}
                                  {%- else -%}
                                    {{ 0 | money }}
                                  {%- endif -%}
                                  <span class="spacing_new">-</span>
                                  {%- if filter.max_value.value -%}
                                    {{ filter.max_value.value | money }}
                                  {%- else -%}
                                    {{ filter.range_max | money }}
                                  {%- endif -%}
                                  <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                                </div>
                              </span>
                            </a>
                          </facet-remove>
                        </div>
                      
                    {%- endif -%}
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>
            {% endcomment %}
             <!-- added -->
  
            <div class="Collection_product_grid_rightside_innertop_1_new Collection_luxe_product_toppart_2_new">
              <div class="Collection_product_grid_rightside_innertop_1_detail_new">
                <div class="Collection_product_grid_rightside_innertop_1_detail_title_new">
                  <h1>
                    {% if collection.metafields.custom.collection_custom_title.value != blank %}
                      {{ collection.metafields.custom.collection_custom_title.value }}
                    {% else %}
                      {{ collection.title }}
                    {% endif %}
                  </h1>
                </div>
                <div class="Collection_product_grid_rightside_innertop_1_detail_count_new">
                  <div class="product-count-vertical light" role="status">
                    <h2 class="product-count__text text-body">
                      <span id="ProductCountDesktop">
                        {%- if collection.results_count -%}
                          {{
                            'templates.search.results_with_count'
                            | t: terms: collection.terms, count: collection.results_count
                          }}
                        {%- elsif collection.products_count == collection.all_products_count -%}
                          {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                        {%- else -%}
                          {{
                            'products.facets.product_count'
                            | t: product_count: collection.products_count, count: collection.all_products_count
                          }}
                        {%- endif -%}
                      </span>
                    </h2>
                    {%- render 'loading-spinner' -%}
                  </div>
                </div>
              </div>
              <div class="Collection_product_grid_rightside_innertop_1_detail_subtitle_new">
                  <h2 class="cmsb826-mb-10 cmsb826-text-base" data-content-type="heading" data-appearance="default" data-element="main" data-pb-style="F8WIOHK">Embark on an exclusive journey with our meticulously curated collection, tailored to elevate your festive, wedding &amp; special occasion looks.</h2>
                </div>
            </div>
  
            <div class="Collection_luxe_product_toppart_3_new">
            
            </div>
          </div>
        </div>
      {%- endif -%}
      

      <div
        class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} Collection_product_grid_rightside_new Collection_luxe_product_bottompart_new"
        id="ProductGridContainer"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
        {% endif %}
      >
        {%- if section.settings.enable_sorting and section.settings.filter_type == 'vertical' -%}
          <div class="Collection_product_grid_rightside_maintop_new">
            <div class="Collection_product_grid_rightside_innertop_new">
              
              <div class="Collection_product_grid_rightside_innertop_2_new">
                <div class="Collection_product_grid_rightside_innertop_2_detail_new">
                  <div class="Collection_product_grid_rightside_innertop_2_detail_filters_new">
                    
                  </div>
                  <div class="Collection_product_grid_rightside_innertop_2_detail_sorting_new">
                    <facet-filters-form class="facets facets-vertical-sort small-hide no-js-hidden">
                      <form class="facets-vertical-form" id="FacetSortForm">
                        <div class="facet-filters sorting caption">
                          <div class="facet-filters__field">
                            <h2 class="facet-filters__label caption-large text-body">
                              <label for="SortBy">Sort By</label>
                            </h2>
                            <div class="select">
                              {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                              <select
                                name="sort_by"
                                class="facet-filters__sort select__select caption-large"
                                id="SortBy"
                                aria-describedby="a11y-refresh-page-message"
                              >
                                {%- for option in collection.sort_options -%}
                                  <option
                                    value="{{ option.value | escape }}"
                                    {% if option.value == sort_by %}
                                      selected="selected"
                                    {% endif %}
                                  >
                                    {{ option.name | escape }}
                                  </option>
                                {%- endfor -%}
                              </select>
                              {% render 'icon-caret' %}
                            </div>
                          </div>
                          <noscript>
                            <button type="submit" class="facets__button-no-js button button--secondary">
                              {{ 'products.facets.sort_button' | t }}
                            </button>
                          </noscript>
                        </div>
                      </form>
                    </facet-filters-form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {%- endif -%}
          
        {%- if collection.products.size == 0 -%}
          <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
            <div class="loading-overlay gradient">
              {% render "loader-spinner" %}
            </div>
            <div class="title-wrapper center">
              <h2 class="title title--primary">
                {{ 'sections.collection_template.empty' | t -}}
                <br>
                {{
                  'sections.collection_template.use_fewer_filters_html'
                  | t: link: collection.url, class: 'underlined-link link'
                }}
              </h2>
            </div>
          </div>
        {%- else -%}
          <div class="collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}" id="CollectionAjaxContent" data-scroll-to>
            <div class="loading-overlay gradient">
              {% render "loader-spinner" %}
            </div>
            <ul
              id="product-grid"
              data-id="{{ section.id }}"
              class="
                grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                grid--{{ section.settings.columns_desktop }}-col-desktop
              "
            >
              {%- for product in collection.products -%}
                {%- assign lazy_load = false -%}
                {%- if forloop.index > 2 -%}
                  {%- assign lazy_load = true -%}
                {%- endif -%}
                {%- if forloop.index == 9 -%}
                  {%- for banner in collection.metafields.custom.collection_product_tile_banners.value -%}
                    {%- if forloop.first -%}
                      {%- render 'collection-product-tile-banner', banner: banner -%}
                    {%- endif -%}
                  {%- endfor -%}
                {%- endif -%}
                {%- if forloop.index == 27 -%}
                  {%- for banner in collection.metafields.custom.collection_product_tile_banners.value -%}
                    {%- if forloop.index == 2 -%}
                      {%- render 'collection-product-tile-banner', banner: banner -%}
                    {%- endif -%}
                  {%- endfor -%}
                {%- endif -%}
                {%- if forloop.index == 15 -%}
                   {%- if settings.mobile_middle_banner != blank -%}
                      <div class="collection-mobile-middle-banner">
                        <a href="{{  settings.mobile_middle_banner_url }}">
                          {{
                            settings.mobile_middle_banner | 
                            image_url: width: settings.mobile_middle_banner.width | 
                            image_tag: widths: '180, 360, 540, 767', 
                            fetchpriority: 'auto'
                          }}
                        </a>
                      </div>
                    {%- endif -%} 
                {%- endif -%}
                <li
                  class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}
                    data-cascade
                    style="--animation-order: {{ forloop.index }};"
                  {% endif %}
                >
                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_shape: section.settings.image_shape,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    lazy_load: lazy_load,
                    show_quick_add: section.settings.enable_quick_add,
                    section_id: section.id
                  %}
                </li>
              {%- endfor -%}
            </ul>

            <div class="collection_pagination_new">
              {%- assign collection_pagination = shop.metaobjects.collection_paginations.values | first -%}
              {%- assign least_pagination = collection_pagination.pagination.value[0] | times: 1 -%}
              
               {%- unless section.settings.load_more -%}
                  <div class="collection__pagination_custom">
                            {%- if collection_pagination != nil and collection.all_products_count > least_pagination -%}
                              <collection-pagination class="collection__pagination small-hide">
                                <span class="pagination__label">Show per pages</span>
                                <div class="pagination__grid">
                                  {%- for paginationKey in collection_pagination.pagination.value -%}
                                    <span class="pagination_item{% if paginationKey contains productsLimit %} active{% endif %}" data-products-limit="{{ paginationKey }}" js-pagination-item>{{ paginationKey }}</span>
                                  {%- endfor -%}
                                </div>
                              </collection-pagination>
                            {%- endif -%}
                  </div>
               {%- endunless -%}

              <div>
                {%- unless section.settings.load_more -%}
                  
                  {%- if paginate.pages > 1 -%}
                    {% render 'pagination', paginate: paginate, anchor: '' %}
                  {%- endif -%}
                  
                {%- endunless -%}
                
                {%- if section.settings.load_more and paginate.next -%}
                    <div class="load-more-selector" products-per-page="{{ products_per_page }}" data-page-limit="{{ paginate.pages }}" data-href="{{ paginate.next.url }}" js-load-more-selector>
                      <div class="load-more-loader hidden" js-load-more-loader></div>
                    </div>
                {%- endif -%}
                
              </div>
          
              <facet-filters-form class="facets facets-vertical-sort small-hide no-js-hidden">
                <form class="facets-vertical-form" id="FacetSortForm">
                  <div class="facet-filters sorting caption">
                    <div class="facet-filters__field">
                      <h2 class="facet-filters__label caption-large text-body">
                        <label for="SortBy">Sort By</label>
                      </h2>
                      <div class="select">
                        {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                        <select
                          name="sort_by"
                          class="facet-filters__sort select__select caption-large"
                          id="SortBy"
                          aria-describedby="a11y-refresh-page-message"
                        >
                          {%- for option in collection.sort_options -%}
                            <option
                              value="{{ option.value | escape }}"
                              {% if option.value == sort_by %}
                                selected="selected"
                              {% endif %}
                            >
                              {{ option.name | escape }}
                            </option>
                          {%- endfor -%}
                        </select>
                        {% render 'icon-caret' %}
                      </div>
                    </div>
                    <noscript>
                      <button type="submit" class="facets__button-no-js button button--secondary">
                        {{ 'products.facets.sort_button' | t }}
                      </button>
                    </noscript>
                  </div>
                </form>
              </facet-filters-form>

            </div>
            
          </div>
        {%- endif -%}
      </div>
    </div>

     {%- if section.settings.load_more and paginate.next -%}
         {%- render 'load-more-pagination' -%}
     {%- endif -%} 
    
  {%- endpaginate -%}
  {%- if section.settings.image_shape == 'arch' -%}
    {%- render 'mask-arch' -%}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Collection Luxe Product",
  "class": "section Collection_product_grid_new Collection_Luxe_product_new",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 4,
      "max": 120,
      "step": 4,
      "default": 120,
      "label": "t:sections.main-collection-product-grid.settings.products_per_page.label"
    },
    {
      "type": "checkbox",
      "id": "load_more",
      "default": false,
      "label": "Load more button"
    },
    {
      "type": "text",
      "id": "load_more_text",
      "default": "Load More",
      "label": "Load more button"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "t:sections.main-collection-product-grid.settings.columns_desktop.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
