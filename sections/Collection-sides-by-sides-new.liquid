                              <div class="Collection_sides_by_sides_innerright_1_videoimage_new">
                                {%- if section.settings.main_desktop_image_2 != blank -%}
                                  {{
                                    section.settings.main_desktop_image_2 | 
                                    image_url: width: img.width | 
                                    image_tag: widths: '540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                    fetchpriority: 'auto', 
                                    class:'desktop_image_new'
                                  }}
                                {%- endif -%}
                                {%- if section.settings.main_mobile_image_2 != blank -%}
