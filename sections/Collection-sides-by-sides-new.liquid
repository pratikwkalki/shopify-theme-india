                              <h4 style="color:{{ section.settings.main_text_color_1 }};">{{ section.settings.main_sub_heading_text_1 }}</h4>
                            </div>  
                          {%- endif -%}
                          {%- if section.settings.main_button_text_1 != blank -%}
                            <div class="Collection_sides_by_sides_innerleft_2_button_new button button_square {{ section.settings.main_button_color }}">
                              {{ section.settings.main_button_text_1 }}
                            </div>  
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}  
                  </div>
              {%- if section.settings.main_button_link_1 != blank -%}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
