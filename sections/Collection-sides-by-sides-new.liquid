                          {% else %}  
                            {%- if section.settings.main_desktop_image_2 != blank and section.settings.main_mobile_image_2 != blank -%}
                              <div class="Collection_sides_by_sides_innerright_1_videoimage_new">
                                {% assign main_desktop_image_2 = section.settings.main_desktop_image_2  | image_url %}
                                {% assign main_mobile_image_2 = section.settings.main_mobile_image_2  | image_url %}
                                <picture>
                                  <source srcset="{%- render 'imagekit', src: main_mobile_image_2 width: 380 %}" media="(max-width: 380px)" />
