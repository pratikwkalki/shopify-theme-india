                              <h4 style="color:{{ section.settings.main_text_color_2 }};">{{ section.settings.main_sub_heading_text_2 }}</h4>
                            </div>  
                          {%- endif -%}
                          {%- if section.settings.main_button_text_2 != blank -%}
                            <div class="Collection_sides_by_sides_innerright_2_button_new button button_square {{ section.settings.main_button_color_2 }}">
                              {{ section.settings.main_button_text_2 }}
                            </div>  
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}  
                  </div>
              {%- if section.settings.main_button_link_2 != blank -%}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

