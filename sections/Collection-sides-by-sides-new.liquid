                              {{ section.settings.main_button_text_2 }}
                            </div>  
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}  
                  </div>
              {%- if section.settings.main_button_link_2 != blank -%}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

