                                  <source srcset="{%- render 'imagekit', src: main_mobile_image_2 width: 750 %}" media="(max-width: 748px)" />
                                  <source srcset="{%- render 'imagekit', src: main_desktop_image_2 width: 890 %}" media="(max-width: 1350px)" />
