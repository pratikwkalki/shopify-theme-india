{%- if section.settings.main_mp4_video_1 != blank or section.settings.main_desktop_image_1 != blank or section.settings.main_mobile_image_1 != blank or section.settings.main_heading_text_1 != blank or section.settings.main_sub_heading_text_1 != blank or section.settings.main_button_text_1 != blank or section.settings.main_mp4_video_2 != blank or section.settings.main_desktop_image_2 != blank or section.settings.main_mobile_image_2 != blank or section.settings.main_heading_text_2 != blank or section.settings.main_sub_heading_text_2 != blank or section.settings.main_button_text_2 != blank -%}
  <div class="Collection_sides_by_sides_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Collection_sides_by_sides_inner_new">
        <div class="Collection_sides_by_sides_leftrightboth_new">
          {%- if section.settings.main_mp4_video_1 != blank or section.settings.main_desktop_image_1 != blank or section.settings.main_mobile_image_1 != blank or section.settings.main_heading_text_1 != blank or section.settings.main_sub_heading_text_1 != blank or section.settings.main_button_text_1 != blank -%}
            <div class="Collection_sides_by_sides_mainleft_new">
              {%- if section.settings.main_button_link_1 != blank -%}
                <a href="{{ section.settings.main_button_link_1 }}">
              {%- endif -%}
                  <div class="Collection_sides_by_sides_innerleft_new">
                    {%- if section.settings.main_mp4_video_1 != blank or section.settings.main_desktop_image_1 != blank or section.settings.main_mobile_image_1 != blank -%}
                      <div class="Collection_sides_by_sides_innerleft_1_new">
                        <div class="Collection_sides_by_sides_innerleft_1_videoimageboth_new">
                          {%- if section.settings.main_mp4_video_1 != blank -%}
                            <div class="Collection_sides_by_sides_innerleft_1_videoimage_new">
                              {{ section.settings.main_mp4_video_1 | video_tag: controls: false, autoplay: true, loop: true }}
                            </div>
                          {% else %}  
                            {%- if section.settings.main_desktop_image_1 != blank and section.settings.main_mobile_image_1 != blank -%}
                              <div class="Collection_sides_by_sides_innerleft_1_videoimage_new">
                                {%- if section.settings.main_desktop_image_1 != blank -%}
                                  {{
                                    section.settings.main_desktop_image_1 | 
                                    image_url: width: img.width | 
                                    image_tag: widths: '540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                    fetchpriority: 'auto', 
                                    class:'desktop_image_new'
                                  }}
                                {%- endif -%}
                                {%- if section.settings.main_mobile_image_1 != blank -%}
                                  {{
                                    section.settings.main_mobile_image_1 | 
                                    image_url: width: img.width | 
                                    image_tag: widths: '540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                    fetchpriority: 'auto', 
                                    class:'mobile_image_new'
                                  }}
                                {%- endif -%}
                              </div>
                            {%- endif -%}
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}
                    {%- if section.settings.main_heading_text_1 != blank or section.settings.main_sub_heading_text_1 != blank or section.settings.main_button_text_1 != blank -%}
                      <div class="Collection_sides_by_sides_innerleft_2_new">
                        <div class="Collection_sides_by_sides_innerleft_2_titleinfosboth_new">
                          {%- if section.settings.main_heading_text_1 != blank -%}
