  {{ 'index-arrivals-details.css' | asset_url | stylesheet_tag }}
  <div class="Index_arrivals_details_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      {%- if section.settings.main_heading_text != blank -%}
        <div class="Common_title_new Index_arrivals_details_title_new">
          <h2>{{ section.settings.main_heading_text }}</h2>
        </div>
      {%- endif -%}
      {%- if section.settings.main_mp4_video_1 != blank or section.settings.main_desktop_image_1 != blank or section.settings.main_mobile_image_1 != blank or section.settings.main_mp4_video_2 != blank or section.settings.main_desktop_image_2 != blank or section.settings.main_mobile_image_2 != blank or section.settings.main_mp4_video_3 != blank or section.settings.main_desktop_image_3 != blank or section.settings.main_mobile_image_3 != blank or section.settings.main_mp4_video_4 != blank or section.settings.main_desktop_image_4 != blank or section.settings.main_mobile_image_4 != blank or section.settings.main_information_text != blank or section.settings.main_sub_heading_text != blank or section.settings.main_button_link != blank -%}
        <div class="Index_arrivals_details_inner_new" style="background: {{ section.settings.inner_background_color }};">        
          <div class="Index_arrivals_details_mainleftright_new">
            <div class="Index_arrivals_details_innerleftright_new">
              {%- if section.settings.main_mp4_video_1 != blank or section.settings.main_desktop_image_1 != blank or section.settings.main_mobile_image_1 != blank or section.settings.main_mp4_video_2 != blank or section.settings.main_desktop_image_2 != blank or section.settings.main_mobile_image_2 != blank or section.settings.main_mp4_video_3 != blank or section.settings.main_desktop_image_3 != blank or section.settings.main_mobile_image_3 != blank or section.settings.main_mp4_video_4 != blank or section.settings.main_desktop_image_4 != blank or section.settings.main_mobile_image_4 != blank -%}
                <div class="Index_arrivals_details_mainleft_new">
                  <div class="Index_arrivals_details_innerleft_new">
                    {%- if section.settings.main_mp4_video_1 != blank or section.settings.main_desktop_image_1 != blank or section.settings.main_mobile_image_1 != blank -%}
                      <div class="Index_arrivals_details_innerleft_1_new">
                        <div class="Index_arrivals_details_innerleft_1_leftside_new">
                          <div class="Index_arrivals_details_innerleft_1_leftside_videoimageboth_new">
                            {%- if section.settings.main_mp4_video_1 != blank -%}
                              <div class="Index_arrivals_details_innerleft_1_leftside_videoimage_new lazy-load-section">
                                <template>
                                  <video playsinline="playsinline" autoplay="autoplay" loop="loop" muted="muted" preload="metadata" poster="{{ section.settings.main_mp4_video_1.preview_image.src | img_url: '700x' }}" alt="{{ section.settings.main_desktop_image_1.alt }}">
                                    <source src="{{ section.settings.main_mp4_video_1.sources[1].url }}" type="video/mp4">
                                  </video>
                                </template>
                              </div>
                            {% else %}  
                              {%- if section.settings.main_desktop_image_1 != blank and section.settings.main_mobile_image_1 != blank -%}
                                <div class="Index_arrivals_details_innerleft_1_leftside_videoimage_new">
                                  {% assign main_desktop_image = section.settings.main_desktop_image_1  | image_url %}
                                  {% assign main_mobile_image = section.settings.main_mobile_image_1  | image_url %}
                                  <picture>
                                    <source srcset="{%- render 'gumlet', src: main_mobile_image w: 160 %}" media="(max-width: 380px)" />
                                    <source srcset="{%- render 'gumlet', src: main_mobile_image w: 220 %}" media="(max-width: 500px)" />
                                    <source srcset="{%- render 'gumlet', src: main_mobile_image w: 350 %}" media="(max-width: 749px)" />
                                    <img src="{%- render 'gumlet', src: main_desktop_image w: 400 %}" alt="{{ section.settings.main_heading_text }}" loading="lazy" width="1438" height="388" />
                                  </picture>
                                </div>
                              {%- endif -%}
                            {%- endif -%}
                          </div>
                        </div>
                      </div>
                    {%- endif -%}
                    {%- if section.settings.main_mp4_video_2 != blank or section.settings.main_desktop_image_2 != blank or section.settings.main_mobile_image_2 != blank or section.settings.main_mp4_video_3 != blank or section.settings.main_desktop_image_3 != blank or section.settings.main_mobile_image_3 != blank or section.settings.main_mp4_video_4 != blank or section.settings.main_desktop_image_4 != blank or section.settings.main_mobile_image_4 != blank -%}
                      <div class="Index_arrivals_details_innerleft_2_new">
                        <div class="Index_arrivals_details_innerleft_2_rightside_new">
                          {%- if section.settings.main_mp4_video_2 != blank or section.settings.main_desktop_image_2 != blank or section.settings.main_mobile_image_2 != blank -%}
                            <div class="Index_arrivals_details_innerleft_2_rightside_1_new">
                              <div class="Index_arrivals_details_innerleft_2_rightside_1_toppart_new">
                                <div class="Index_arrivals_details_innerleft_2_rightside_1_toppart_videoimageboth_new">
                                  {%- if section.settings.main_mp4_video_2 != blank -%}
                                    <div class="Index_arrivals_details_innerleft_2_rightside_1_toppart_videoimage_new">
                                      {{ section.settings.main_mp4_video_2 | video_tag: controls: false, autoplay: true, loop: true }}
                                    </div>
                                  {% else %}  
                                    {%- if section.settings.main_desktop_image_2 != blank and section.settings.main_mobile_image_2 != blank -%}
                                      <div class="Index_arrivals_details_innerleft_2_rightside_1_toppart_videoimage_new">
                                        {% assign main_desktop_image_2 = section.settings.main_desktop_image_2  | image_url %}
                                        {% assign main_mobile_image_2 = section.settings.main_mobile_image_2  | image_url %}
                                        <picture>
                                          <source srcset="{%- render 'gumlet', src: main_mobile_image_2 w: 160 %}" media="(max-width: 380px)" />
                                          <source srcset="{%- render 'gumlet', src: main_mobile_image_2 w: 220 %}" media="(max-width: 500px)" />
                                          <source srcset="{%- render 'gumlet', src: main_mobile_image_2 w: 350 %}" media="(max-width: 749px)" />
                                          <img src="{%- render 'gumlet', src: main_desktop_image_2 w: 400 %}" alt="{{ section.settings.main_heading_text }}" loading="lazy" width="1438" height="388" />
                                        </picture>
                                      </div>
                                    {%- endif -%}
                                  {%- endif -%}
                                </div>
                              </div>
                            </div>
                          {%- endif -%}
                          {%- if section.settings.main_mp4_video_3 != blank or section.settings.main_desktop_image_3 != blank or section.settings.main_mobile_image_3 != blank or section.settings.main_mp4_video_4 != blank or section.settings.main_desktop_image_4 != blank or section.settings.main_mobile_image_4 != blank -%}
                            <div class="Index_arrivals_details_innerleft_2_rightside_2_new">
                              <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_new">
                                {%- if section.settings.main_mp4_video_3 != blank or section.settings.main_desktop_image_3 != blank or section.settings.main_mobile_image_3 != blank -%}
                                  <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_1_new">
                                    <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_1_leftside_new">
                                      <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_1_leftside_videoimageboth_new">
                                        {%- if section.settings.main_mp4_video_3 != blank -%}
                                          <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_1_leftside_videoimage_new">
                                            {{ section.settings.main_mp4_video_3 | video_tag: controls: false, autoplay: true, loop: true }}
                                          </div>
                                        {% else %}  
                                          {%- if section.settings.main_desktop_image_3 != blank and section.settings.main_mobile_image_3 != blank -%}
                                            <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_1_leftside_videoimage_new">
                                              {% assign main_desktop_image_3 = section.settings.main_desktop_image_3  | image_url %}
                                              {% assign main_mobile_image_3 = section.settings.main_mobile_image_3  | image_url %}
                                              <picture>
                                                <source srcset="{%- render 'gumlet', src: main_mobile_image_3 w: 80 %}" media="(max-width: 380px)" />
                                                <source srcset="{%- render 'gumlet', src: main_mobile_image_3 w: 110 %}" media="(max-width: 500px)" />
                                                <source srcset="{%- render 'gumlet', src: main_mobile_image_3 w: 180 %}" media="(max-width: 749px)" />
                                                <img src="{%- render 'gumlet', src: main_desktop_image_3 w: 200 %}" alt="{{ section.settings.main_heading_text }}" loading="lazy" width="1438" height="388" />
                                              </picture>
                                            </div>
                                          {%- endif -%}
                                        {%- endif -%}
                                      </div>
                                    </div>
                                  </div>
                                {%- endif -%}
                                {%- if section.settings.main_mp4_video_4 != blank or section.settings.main_desktop_image_4 != blank or section.settings.main_mobile_image_4 != blank -%}
                                  <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_2_new">
                                    <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_2_rightside_new">
                                      <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_2_rightside_videoimageboth_new">
                                        {%- if section.settings.main_mp4_video_4 != blank -%}
                                          <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_2_rightside_videoimage_new">
                                            {{ section.settings.main_mp4_video_4 | video_tag: controls: false, autoplay: true, loop: true }}
                                          </div>
                                        {% else %}  
                                          {%- if section.settings.main_desktop_image_4 != blank and section.settings.main_mobile_image_4 != blank -%}
                                            <div class="Index_arrivals_details_innerleft_2_rightside_2_bottompart_2_rightside_videoimage_new">
                                              {% assign main_desktop_image_4 = section.settings.main_desktop_image_4  | image_url %}
                                              {% assign main_mobile_image_4 = section.settings.main_mobile_image_4  | image_url %}
                                              <picture>
                                                <source srcset="{%- render 'gumlet', src: main_mobile_image_4 w: 80 %}" media="(max-width: 380px)" />
                                                <source srcset="{%- render 'gumlet', src: main_mobile_image_4 w: 110 %}" media="(max-width: 500px)" />
                                                <source srcset="{%- render 'gumlet', src: main_mobile_image_4 w: 180 %}" media="(max-width: 749px)" />
                                                <img src="{%- render 'gumlet', src: main_desktop_image_4 w: 200 %}" alt="{{ section.settings.main_heading_text }}" loading="lazy" width="1438" height="388" />
                                              </picture>
                                            </div>
                                          {%- endif -%}
                                        {%- endif -%}
                                      </div>
                                    </div>
                                  </div>
                                {%- endif -%}
                              </div>
                            </div>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
              {%- if section.settings.main_information_text != blank or section.settings.main_sub_heading_text != blank or section.settings.main_button_link != blank or section.settings.sub_small_information_text != blank -%}
                <div class="Index_arrivals_details_mainright_new">
                  <div class="Index_arrivals_details_innerright_new">
                    {%- if section.settings.main_information_text != blank -%}
                      <div class="Index_arrivals_details_innerright_infos_new">
                        {{ section.settings.main_information_text }}
                      </div>  
                    {%- endif -%}
                    {%- if section.settings.main_sub_heading_text != blank -%}
                      <div class="Index_arrivals_details_innerright_title_new">
                        <h2>{{ section.settings.main_sub_heading_text }}</h2>
                      </div>  
                    {%- endif -%}
                    {%- if section.settings.main_button_text != blank and section.settings.main_button_link != blank -%}
                      <div class="Index_arrivals_details_innerright_button_new">
                        <a href="{{ section.settings.main_button_link }}" class="button button_white saree-edit">
                          {{ section.settings.main_button_text }}
                        </a>
                      </div>  
                    {%- endif -%}
                    {%- if section.settings.sub_small_information_text != blank -%}
                      <div class="Index_arrivals_details_innerright_infos_new">
                        {{ section.settings.sub_small_information_text }}
                      </div>  
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>

  <script>
    const video = document.querySelector("video");
    const videoImg = document.querySelector("video img");
    if (video) {
      video.setAttribute("alt", "saree video");
    }
    if (videoImg) {
      videoImg.setAttribute("alt", "saree video");
    }
  </script>
{%- endif -%}

