{%- if section.settings.main_desktop_mp4_video != blank or section.settings.main_mobile_mp4_video != blank or section.settings.main_desktop_full_image != blank or section.settings.main_mobile_full_image != blank -%}
  <div class="Page_our_stores_banner_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="Page_our_stores_banner_inner_new page-width">
      <div class="Page_our_stores_banner_detail_new">
        {%- if section.settings.main_banner_redirect_link != blank -%}
          <a href="{{ section.settings.main_banner_redirect_link }}">
        {%- endif -%}
            <div class="Page_our_stores_banner_detail_videoimageboth_new">
              {%- if section.settings.main_desktop_mp4_video != blank and section.settings.main_mobile_mp4_video != blank -%}
                <div class="Page_our_stores_banner_detail_videoimage_new">
                  {%- if section.settings.main_desktop_mp4_video != blank -%}
                    {{ section.settings.main_desktop_mp4_video | video_tag: controls: false, autoplay: true, loop: true, class: 'desktop_image_new' }}
                  {%- endif -%}
                  {%- if section.settings.main_mobile_mp4_video != blank -%}
                    {{ section.settings.main_mobile_mp4_video | video_tag: controls: false, autoplay: true, loop: true, class: 'mobile_image_new' }}
                  {%- endif -%}
                </div>
              {% else %}  
                {%- if section.settings.main_desktop_full_image != blank and section.settings.main_mobile_full_image != blank -%}
                  <div class="Page_our_stores_banner_detail_videoimage_new">
                    {%- if section.settings.main_desktop_full_image != blank -%}
                      {{
                        section.settings.main_desktop_full_image | 
                        image_url: width: img.width | 
                        image_tag: widths: '2800', 
                        fetchpriority: 'auto', 
                        class:'desktop_image_new'
                      }}
                    {%- endif -%}
                    {%- if section.settings.main_mobile_full_image != blank -%}
                      {{
                        section.settings.main_mobile_full_image | 
                        image_url: width: img.width | 
                        image_tag: widths: '2800', 
                        fetchpriority: 'auto', 
                        class:'mobile_image_new'
                      }}
                    {%- endif -%}
                  </div>
                {%- endif -%}
              {%- endif -%}
            </div>
        {%- if section.settings.main_banner_redirect_link != blank -%}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}  

{% schema %}
  {
    "name": "Page Our Stores Banner",
    "class": "Page_our_stores_banner_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "video",
        "id": "main_desktop_mp4_video",
        "label": "Add Main Desktop MP4 Video"
      },
      {
        "type": "video",
        "id": "main_mobile_mp4_video",
        "label": "Add Main Mobile MP4 Video"
      },
      {
        "type": "image_picker",
        "id": "main_desktop_full_image",
        "label": "Add Main Desktop Full Image"
      },
      {
        "type": "image_picker",
        "id": "main_mobile_full_image",
        "label": "Add Main Mobile Full Image"
      },
      {
        "type": "url",
        "id": "main_banner_redirect_link",
        "label": "Add Main Banner Redirect Link"
      }
    ],
    "presets": [
      {
        "name": "Page Our Stores Banner"
      }
    ]
  }
{% endschema %}