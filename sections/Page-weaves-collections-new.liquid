{%- if section.blocks.size > 0 or section.settings.main_heading_text != blank or section.settings.main_button_link != blank -%}
  <link rel="preload" href="{{ 'index-custom-category.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="{{ 'index-custom-category.css' | asset_url }}"></noscript>
  <link rel="preload" href="{{ 'page-weaves-collections.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="{{ 'page-weaves-collections.css' | asset_url }}"></noscript>
  <div class="Page_weaves_collections_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Page_weaves_collections_inner_new">
        <div class="Page_weaves_collections_leftrightboth_new">
          {%- if section.settings.main_heading_text != blank or section.settings.main_button_link != blank -%}
            <div class="Page_weaves_collections_mainleft_new">
              <div class="Page_weaves_collections_innerleft_new">
                {%- if section.settings.main_heading_text != blank -%}
                  <div class="Page_weaves_collections_innerleft_title_new">
                    {{ section.settings.main_heading_text }}
                  </div>
                {%- endif -%}
                {%- if section.settings.main_button_text != blank and section.settings.main_button_link != blank -%}
                  <div class="Page_weaves_collections_innerleft_links_new">
                    <a href="{{ section.settings.main_button_link }}" class="button button_black_square">
                      {{ section.settings.main_button_text }}
                    </a>
                  </div>  
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
          {%- if section.blocks.size > 0 -%}
            <div class="Page_weaves_collections_mainright_new">
              <div class="Page_weaves_collections_innerright_new">
                <div class="Page_weaves_collections_innerright_allloop_new">
                  <div class="swiper-container Page_weaves_collection_slider">
                    <div class="swiper-wrapper">
                      {%- for block in section.blocks -%}
                        {%- if block.settings.main_mp4_video != blank or block.settings.main_desktop_image != blank or block.settings.main_mobile_image != blank or block.settings.main_tags_detail_text != blank or block.settings.title != blank or block.settings.inner_button_link != blank -%}
                          <div class="swiper-slide Index_custom_collections_allloop_mainboxs_new Page_weaves_collections_innerright_allloop_mainboxs_new">
                            {%- if block.settings.inner_button_link != blank -%}
                              <a href="{{ block.settings.inner_button_link }}"></a>
                            {%- endif -%}  
                            <div class="Index_custom_collections_allloop_innerboxs_new">
                              {%- if block.settings.main_mp4_video != blank or block.settings.main_desktop_image != blank or block.settings.main_mobile_image != blank -%}
                                <div class="Index_custom_collections_allloop_innerboxs_1_new">
                                  <div class="Index_custom_collections_allloop_innerboxs_1_videoimageboth_new">
                                    {%- if block.settings.main_mp4_video != blank -%}
                                      <div class="Index_custom_collections_allloop_innerboxs_1_videoimage_new">
                                        {{ block.settings.main_mp4_video | video_tag: image_size: 'master', controls: false, autoplay: true, loop: true }}
                                      </div>
                                    {% else %}  
                                      {%- if block.settings.main_desktop_image != blank and block.settings.main_mobile_image != blank -%}
                                        <div class="Index_custom_collections_allloop_innerboxs_1_videoimage_new">
                                          {%- if block.settings.main_desktop_image != blank -%}
                                            {{
                                              block.settings.main_desktop_image | 
                                              image_url: width: img.width | 
                                              image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                              fetchpriority: 'auto', 
                                              class:'desktop_image_new',
                                              alt: block.settings.title
                                            }}
                                          {%- endif -%}
                                          {%- if block.settings.main_mobile_image != blank -%}
                                            {{
                                              block.settings.main_mobile_image | 
                                              image_url: width: img.width | 
                                              image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                              fetchpriority: 'auto', 
                                              class:'mobile_image_new',
                                              alt: block.settings.title
                                            }}
                                          {%- endif -%}
                                        </div>
                                      {%- endif -%}
                                    {%- endif -%}
                                  </div>
                                </div>
                              {%- endif -%}
                              {%- if block.settings.title != blank or block.settings.inner_button_link != blank -%}
                                <div class="Index_custom_collections_allloop_innerboxs_3_new">
                                  <div class="Index_custom_collections_allloop_innerboxs_3_titlebuttonboth_new">
                                    {%- if block.settings.title != blank -%}
                                      <div class="Index_custom_collections_allloop_innerboxs_3_title_new">
                                        <h3>{{ block.settings.title }}</h3>
                                      </div>  
                                    {%- endif -%}
                                    {%- if block.settings.inner_button_text != blank and block.settings.inner_button_link != blank -%}
                                      <div class="Index_custom_collections_allloop_innerboxs_3_button_new">
                                        <a href="{{ block.settings.inner_button_link }}" class="button button_white">
                                          {{ block.settings.inner_button_text }}
                                        </a>
                                      </div>  
                                    {%- endif -%}
                                  </div>
                                </div>  
                              {%- endif -%}
                            </div>
                          </div>
                        {%- endif -%}
                      {%- endfor -%}
                    </div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-pagination"></div>
                  </div>
                </div>
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      new Swiper('.Page_weaves_collection_slider',{loop:!1,grabCursor:!1,spaceBetween:20,slidesPerGroup:1,slidesPerView:4,watchSlidesProgress:!0,draggable:!0,autoHeight:!1,watchOverflow:!0,threshold:10,mousewheel:{forceToAxis:!0},navigation:{nextEl:".swiper-button-next",prevEl:".swiper-button-prev",},pagination:{el:".swiper-pagination",clickable:!0},breakpoints:{0:{slidesPerGroup:1,slidesPerView:2,spaceBetween:10,},749:{slidesPerView:3,spaceBetween:10,},990:{slidesPerView:3,spaceBetween:10,},1200:{slidesPerView:4,spaceBetween:15,},1440:{}}})
    });
  </script>
{%- endif -%} 

