{% schema %}
  {
    "name": "Page About Us Template",
    "class": "Page_about_us_template_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      }
    ],
    "blocks": [
      {
        "type": "video_or_image_banner",
        "name": "Video OR Image Banner",
        "settings": [
          {
            "type": "video",
            "id": "main_mp4_video",
            "label": "Add Main MP4 Video"
          },
          {
            "type": "text",
            "id": "youtube_video_id",
            "label": "Youtube video ID"
          },
          {
            "type": "image_picker",
            "id": "main_desktop_image",
            "label": "Add Main Desktop Image"
          },
          {
            "type": "image_picker",
            "id": "main_mobile_image",
            "label": "Add Main Mobile Image"
          }
        ]
      },
      {
        "type": "logo_with_small_texts",
        "name": "Logo With Small Texts",
        "settings": [
          {
            "type": "image_picker",
            "id": "main_small_logo_image",
            "label": "Add Main Small Logo Image"
          },
          {
            "type": "text",
            "id": "main_small_heading_text",
            "label": "Add Main Small Heading Text",
            "default": "Heading"
          },
          {
            "type": "richtext",
            "id": "main_small_information_text",
            "label": "Add Main Small Information Text",
            "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>"
          }
        ]
      },
      {
        "type": "heading_with_large_texts",
        "name": "Heading With Large Texts",
        "settings": [
          {
            "type": "text",
            "id": "main_large_heading_text",
            "label": "Add Main Large Heading Text",
            "default": "Heading"
          },
          {
            "type": "richtext",
            "id": "main_large_information_text",
            "label": "Add Main Large Information Text",
            "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>"
          }
        ]
      }
    ]
  }
{% endschema %}