{%- if section.settings.main_mp4_video != blank or section.settings.main_desktop_image != blank or section.settings.main_mobile_image != blank -%}
  {{ 'page-collection-detail.css' | asset_url | stylesheet_tag }}
  <div class="Page_collection_detail_template_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Page_collection_detail_template_breadcrumb_new">
        {% render 'Breadcrumb-navigation-new' %}
      </div>
    </div>
    {%- if section.settings.main_mp4_video != blank or section.settings.main_desktop_image != blank or section.settings.main_mobile_image != blank -%}
      <div class="Page_collection_detail_template_inner_new">
        <div class="Page_collection_detail_template_banner_new">
          <div class="Page_collection_detail_template_banner_videoimageboth_new">
            {%- if section.settings.main_mp4_video != blank -%}
              <div class="Page_collection_detail_template_banner_videoimage_new">
                {% assign main_desktop_mp4_video_image = section.settings.main_mp4_video.preview_image | image_url %}
                <video playsinline="playsinline" autoplay="autoplay" loop="loop" class="desktop_image_new" muted="muted" preload="metadata" poster="{%- render 'imagekit', src: main_desktop_mp4_video_image width: 1920 %}">
                  <source src="{%- render 'imagekit', src: section.settings.main_mp4_video.sources[1].url %}" type="video/mp4">
                  <img src="{%- render 'imagekit', src: main_desktop_mp4_video_image width: 1920 %}" loading="lazy">
                </video>
              </div>
            {% else %}  
              {%- if section.settings.main_desktop_image != blank and section.settings.main_mobile_image != blank -%}
                <div class="Page_collection_detail_template_banner_videoimage_new">
                  {% assign main_desktop_image = section.settings.main_desktop_image | image_url %}
                  {% assign main_mobile_image = section.settings.main_mobile_image | image_url %}
                  <picture>
                    <source srcset="{%- render 'imagekit', src: main_mobile_image width: 380 %}" media="(max-width: 380px)" type="image/avif" />
                    <source srcset="{%- render 'imagekit', src: main_mobile_image width: 412 %}" media="(max-width: 412px)" type="image/avif" />
                    <source srcset="{%- render 'imagekit', src: main_mobile_image width: 500 %}" media="(max-width: 500px)" type="image/avif" />
                    <source srcset="{%- render 'imagekit', src: main_mobile_image width: 750 %}" media="(max-width: 748px)" type="image/avif" />
                    <source srcset="{%- render 'imagekit', src: main_desktop_image width: 1024 %}" media="(max-width: 1024px)" type="image/avif" />
                    <source srcset="{%- render 'imagekit', src: main_desktop_image width: 1200 %}" media="(max-width: 1200px)" type="image/avif" />
                    <source srcset="{%- render 'imagekit', src: main_desktop_image width: 1350 %}" media="(max-width: 1350px)" type="image/avif" />
                    <img src="{%- render 'imagekit', src: main_desktop_image width: 1480 %}" alt="" loading="lazy" width="1438" height="539" />
                  </picture>
                </div>
              {%- endif -%}
            {%- endif -%}
          </div>
        </div>  
      </div>
    {%- endif -%}
  </div>
{%- endif -%}   

{% schema %}
  {
    "name": "Collection Detail Temp",
    "class": "Page_collection_detail_template_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "video",
        "id": "main_mp4_video",
        "label": "Add Main MP4 Video"
      },
      {
        "type": "image_picker",
        "id": "main_desktop_image",
        "label": "Add Main Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "main_mobile_image",
        "label": "Add Main Mobile Image"
      }
    ]
  }
{% endschema %}