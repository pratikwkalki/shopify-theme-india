    "name": "Index Round Column List",
    "class": "Index_round_column_list_new",
    "settings": [
      {
        "type": "textarea",
        "id": "customClass",
        "label": "Add Custom Class",
        "info": "Bridal_coll_round_column_list_new"
      },
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      }
    ],
    "blocks": [
      {
        "type": "texts_with_links",
        "name": "Texts With Links",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Add Main Heading Text",
            "default": "Heading"
          },
          {
            "type": "url",
            "id": "redirect",
            "label": "Add Main Redirect Link",
            "default": "/"
          },
          {
            "type": "checkbox",
            "id": "activation",
            "label": "Add Main Active Class",
            "default": false
          },
          {
            "type": "color",
            "id": "title_color",
            "label": "Add Heading Color"
          }
        ]
      },
      {
        "type": "image_with_text_column",
        "name": "Image With Text Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Add Main Mobile Image"
          },
          {
            "type": "text",
