{%- if section.blocks.size > 0 -%}
  <div class="Index_round_column_list_main_new {{ section.settings.customClass }}" style="background: {{ section.settings.main_background_color }};">
    <div class="Index_round_column_list_inner_new">
      {%- if section.blocks.size > 0 -%}
        <div class="page-width">
          <div class="Index_round_column_list_1_new">
            <div class="Index_round_column_list_1_allloop_new">
              {%- for block in section.blocks -%}
                {%- if block.type == 'texts_with_links' -%}
                  {%- if block.settings.title != blank -%}
                    <div class="Index_round_column_list_1_allloop_mainboxs_new{% if block.settings.activation %} active{% endif %}">
                      <div class="Index_round_column_list_1_allloop_innerboxs_new">
                        <a href="{{ block.settings.redirect }}" style="color:{{ block.settings.title_color }};">
                          {{ block.settings.title }}
                        </a>
                      </div>
                    </div>
                  {%- endif -%}
                {%- endif -%}
              {%- endfor -%}
            </div>
          </div>
        </div>
      {%- endif -%}
      {%- if section.blocks.size > 0 -%}
        <div class="Index_round_column_list_2_new">
          <div class="Index_round_column_list_2_allloop_new">
            <div class="swiper-container Index_round_column_slider">
              <div class="swiper-wrapper">
                {%- for block in section.blocks -%}
                  {%- if block.type == 'image_with_text_column' -%}
                    {%- if block.settings.image != blank and block.settings.title != blank -%}
                      <div class="swiper-slide Index_round_column_list_2_allloop_mainboxs_new">
                        <div class="Index_round_column_list_2_allloop_innerboxs_new">
                          <a href="{{ block.settings.redirect }}">
                            {%- if block.settings.image != blank -%}
                              <div class="Index_round_column_list_2_allloop_innerboxs_image_new">
                                <img class="Full_image_new" src="{%- render 'imagekit' image: block.settings.image, width: 60 %}" alt="{{ block.settings.title }}" loading="lazy" width="60" height="60" />
                              </div>
                            {%- endif -%}
                            {%- if block.settings.title != blank -%}
                              <div class="Index_round_column_list_2_allloop_innerboxs_title_new">
                                <p>{{ block.settings.title }}</p>
                              </div>
                            {%- endif -%}
                          </a>
                        </div>
                      </div>
                    {%- endif -%}
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}   

