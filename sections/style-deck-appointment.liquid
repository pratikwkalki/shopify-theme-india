{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class=" page-width">
    <div class="style-deck-appointment-wraper" {% if section.settings.section-bg %}style="background-color: {{ section.settings.section-bg }};"{% endif %}>
      {% if section.settings.expert-image != blank or section.settings.expert-text != blank %}
        <div class="style-expert-img-wrap">
          {% if section.settings.expert-image != blank %}
            {{
              section.settings.expert-image
              | image_url: width: 167
              | image_tag: widths: '167'
            }}
          {% endif %}
          {% if section.settings.expert-text != blank %}
            <div class="style-expert-content">
              {{ section.settings.expert-text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
      {% if section.settings.heading != blank or section.settings.testimonial-content != blank %}
        <div class="style-testimonials-content-wrap">
          {% if section.settings.heading != blank %}
            <div class="Common_title_new Index_title_title_new">
              <h2>{{ section.settings.heading }}</h2>
            </div>
          {% endif %}
          {% if section.settings.testimonial-content != blank %}
            <div class="style-testimonials-content">
              {{ section.settings.testimonial-content }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Style deck appointment",
  "tag": "section",
  "class": "style-deck-appointment",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "color",
      "id": "section-bg",
      "label": "Section background color"
    },
    {
      "type": "image_picker",
      "id": "expert-image",
      "label": "Style expert image"
    },
    {
      "type": "richtext",
      "id": "expert-text",
      "label": "Style expert content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "testimonial-content",
      "label": "Testimonial content"
    }
  ],
  "presets": [
    {
      "name": "Style deck appointment"
    }
  ]
}
{% endschema %}
