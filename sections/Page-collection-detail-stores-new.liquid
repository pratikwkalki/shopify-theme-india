{%- if section.settings.main_icon_image != blank or section.settings.main_information_text != blank or section.settings.main_button_link_1 != blank or section.settings.main_button_link_2 != blank or section.settings.main_social_icons != blank -%}
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_whatsapp_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
      assign has_social_icons = false
    endif
  -%}
  <div class="Page_collection_detail_stores_main_new" style="background: {{ section.settings.main_background_color }};">
    <div class="page-width">
      <div class="Page_collection_detail_stores_inner_new">      
        <div class="Page_collection_detail_stores_detail_new">
          {%- if section.settings.main_icon_image != blank -%}
            <div class="Page_collection_detail_stores_detail_icons_new">
              {{
                section.settings.main_icon_image | 
                image_url: width: img.width | 
                image_tag: widths: '180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                fetchpriority: 'auto', 
                class:'Icon_image_new'
              }}
            </div>
          {%- endif -%}
          {%- if section.settings.main_information_text != blank -%}
            <div class="Page_collection_detail_stores_detail_infos_new">
              {{ section.settings.main_information_text }}
            </div>
          {%- endif -%}
          {%- if section.settings.main_button_link_1 != blank or section.settings.main_button_link_2 != blank -%}
            <div class="Page_collection_detail_stores_detail_button_new">
              {%- if section.settings.main_button_text_1 != blank and section.settings.main_button_link_1 != blank -%}
                <div class="Page_collection_detail_stores_detail_button_both_new">
                  <a href="{{ section.settings.main_button_link_1 }}" class="button button_white button_border">
                    {{ section.settings.main_button_text_1 }}
                  </a>
                </div>  
              {%- endif -%}
              {%- if section.settings.main_button_text_2 != blank and section.settings.main_button_link_2 != blank -%}
                <div class="Page_collection_detail_stores_detail_button_both_new">
                  <a href="{{ section.settings.main_button_link_2 }}" class="button button_white button_border">
                    {{ section.settings.main_button_text_2 }}
                  </a>
                </div>  
              {%- endif -%}
            </div>  
          {%- endif -%}
          {%- if section.settings.main_social_icons and has_social_icons -%}
            <div class="Page_collection_detail_stores_detail_social_new">
              {%- render 'social-icons', class: 'footer__list-social' -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Collection Detail Stores",
    "class": "Page_collection_detail_stores_new",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "image_picker",
        "id": "main_icon_image",
        "label": "Add Main Icon Image"
      },
      {
        "type": "richtext",
        "id": "main_information_text",
        "label": "Add Main Information Text",
        "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>"
      },
      {
        "type": "text",
        "id": "main_button_text_1",
        "label": "Add Main Button Text-1",
        "default": "Shop Now"
      },
      {
        "type": "url",
        "id": "main_button_link_1",
        "label": "Add Main Button Link-1",
        "default": "/"
      },
      {
        "type": "text",
        "id": "main_button_text_2",
        "label": "Add Main Button Text-2",
        "default": "Shop Now"
      },
      {
        "type": "url",
        "id": "main_button_link_2",
        "label": "Add Main Button Link-2",
        "default": "/"
      },
      {
        "type": "checkbox",
        "id": "main_social_icons",
        "label": "Select Main Social Icons",
        "default": true
      }
    ],
    "presets": [
      {
        "name": "Collection Detail Stores"
      }
    ]
  }
{% endschema %}